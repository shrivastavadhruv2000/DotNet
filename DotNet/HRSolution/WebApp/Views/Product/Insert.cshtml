@{
    ViewData["Title"] = "Home Page";
}

<section class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Create an account</h2>

              <form method="post">

                <div class="form-outline mb-4">
                  <input type="text" id="pid" class="form-control form-control-lg" name="pid" />
                  <label class="form-label" for="pid">Product Id:</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="text" id="pname" class="form-control form-control-lg" name="pname" />
                  <label class="form-label" for="pname">Product Name:</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="text" id="quantity" class="form-control form-control-lg" name="quantity" />
                  <label class="form-label" for="quantity">Product Quantity:</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="text" id="price" class="form-control form-control-lg"name="price" />
                  <label class="form-label" for="price">Product Price:</label>
                </div>

                

                <div class="d-flex justify-content-center">
                  <input type="submit"
                    class="btn btn-success btn-block btn-lg gradient-custom-4 text-body"value="submit"><a href="/Product/Product">submit</a>
                </div>

                

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>